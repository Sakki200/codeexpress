{# WHEN USER IS LOG #}
{% if app.user and 'ROLE_PREMIUM' in app.user.roles %}
	<a href="{{path('app_subscription')}}" class="bg-yellow-500 text-white py-1.5 px-3 rounded-md hover:bg-yellow-400">
		{{ux_icon('mdi:crown',{'class':'h-6 w-6 inline'})}}
	</a>
{% else %}
	<a href="{{path('app_subscription')}}" class="bg-yellow-500 text-white py-1.5 px-3 rounded-md hover:bg-yellow-400">PREMIUM
		{{ux_icon('mdi:crown',{'class':'h-6 w-6 inline'})}}
	</a>
{% endif %}

<a href="{{path('app_note_all')}}" data-tooltip="All notes" class="border-2  border-neutral-700 p-1 rounded-md  hover:bg-neutral-200">
	{{ux_icon('mdi:note-outline',{'class':'h-6 w-6'})}}
</a>
<a href="{{path('app_note_new')}}" data-tooltip="New note" class="border-2  border-neutral-700 p-1 rounded-md hover:bg-neutral-200">
	{{ux_icon('mdi:plus-box-outline',{'class':'h-6 w-6'})}}
</a>
<a href="{{path('app_logout')}}" data-tooltip="Logout" class="border-2  border-neutral-700 p-1 rounded-md  hover:bg-neutral-200">
	{{ux_icon('mdi:logout',{'class':'h-6 w-6'})}}
</a>
<a href="{{path('app_profile',{'username':app.user.username ?? ''})}}" data-tooltip="Profile page" class="p-2 rounded-full ">
	<img src="{{ '/images/uploads/' ~ app.user.image ?? 'default.png' }}" alt="profile picture" width="32" class="w-11 h-11 bg-cover bg-center shadow-md rounded-full hover:scale-95 transition-transform duration-200 ease-in-out" style="background-image: url('{{ '/images/uploads/' ~ app.user.image ?? 'default.jpg' }}')">
</a>
