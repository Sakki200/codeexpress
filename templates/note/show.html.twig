{% extends 'base.html.twig' %}

{% block title %}
	{{ note.title }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/prism.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-markup-templating.min.js"></script>
	{# Add more language components as needed, for example: #}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-php.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-javascript.min.js"></script>
{% endblock %}

{% block body %}
	 {{ include('components/note_header.html.twig') }}
    <section class="max-w-screen-lg mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-4">
        {% if note.isPremium %}
            {% if app.user and 'ROLE_PREMIUM' in app.user.roles %}
                {% include "components/note-content.html.twig" %}
            {% else %}
                {{ include('components/premium-notice.html.twig') }}
            {% endif %}
        {% else %}
            {% include "components/note-content.html.twig" %}
        {% endif %}
		<aside class="flex flex-col gap-4 md:col-span-1">
			<div class="rounded-md p-4 mb-4 flex flex-col gap-4 border">
				<div class="flex items-center gap-2">
					<img src="{{ '/images/uploads/' ~ app.user.image ?? "default.jpg" }}" alt="profile picture" class="inline-block h-10 w-10 rounded-full">
					<div class="flex flex-col gap-1">
						<p class="text-xl font-bold">{{ note.author.username }}</p>
						<p class="text-sm text-slate-600">Member since
							{{ note.author.createdAt|time_diff }}
							ago</p>
					</div>
				</div>
								
				<div class="flex gap-2 items-center text-sm">				
					<twig:LikeButton :note="note" />
					<a class="flex items-center gap-1 bg-violet-100 rounded-md py-2 px-3">
						{% set views = note.views|length %}
						{{ ux_icon('mdi:eye', { 'class': 'h-5 w-5 text-violet-950 mr-1 inline-block' }) }}
						{{ views|format_number }}</a>
					{% for item in note.author.networks %}
						<p href="{{ item.url }}" class="bg-violet-100 rounded-md py-2 px-3 hover:bg-violet-200 self-end w-fit transition-all duration-200 ease-in-out">
							{{ ux_icon('mdi:' ~ item.name, { 'class': 'h-5 w-5 text-violet-950 inline-block' }) }}
						</p>
					{% endfor %}
				</div>
			</div>
			<div class="grid grid-cols-1 gap-4">
				{% for item in authorNotes %}
					<a href="{{ path('app_show', {'slug': item.slug}) }}" class="rounded-md p-4 md:p-6 mb-4 flex flex-col border">
						<p class="text-base mb-1 font-semibold">{{ item.title|slice(0,22) }}...</p>
						<p class="text-slate-600 mb-2 text-sm">
							<img src="{{ item.category.icon }}" alt="{{ item.category.title }}" class="inline-block h-7 w-7 mr-2">
							Published
							{{ item.createdAt|time_diff }}
							ago.
						</p>
					</a>
				{% endfor %}
			</div>
		</aside>
		{% if 'canBeModify' == true %}
			<div>
				<a href="{{path('app_note_edit', {'slug' : note.slug} )}}">
					<button>
						<strong>MODIFY YOUR NOTE</strong>
					</button>
				</a>
			</div>
		{% endif %}
	</section>

	<div class="max-w-screen-lg mx-auto px-4 pb-6 md:pb-16">
		{{ include('components/cta.html.twig') }}
	</div>
{% endblock %}
